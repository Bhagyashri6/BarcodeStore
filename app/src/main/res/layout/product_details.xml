<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:background="#fff"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@android:color/white"
                custom:cardCornerRadius="4dp">

                <com.atminfotech.barcodestorenew.SliderLayoutNew
                    android:id="@+id/slider"
                    style="@style/AlertDialog.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    custom:pager_animation_span="1100"
                    custom:selected_color="@color/colorPrimary"
                    custom:unselected_color="#55555555"
                    custom:shape="oval"
                    custom:selected_padding_left="3dp"
                    custom:selected_padding_right="3dp"
                    custom:unselected_padding_left="3dp"
                    custom:unselected_padding_right="3dp"
                    custom:selected_width="8dp"
                    custom:selected_height="8dp"
                    custom:unselected_width="4dp"
                    custom:unselected_height="4dp"
                    />

                <com.daimajia.slider.library.Indicators.PagerIndicator
                    android:id="@+id/banner_slider_indicator"
                    style="@style/AndroidImageSlider_Indicator"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center|bottom"
                    app:selected_color="@color/colorPrimary"
                    app:unselected_color="@color/colorSub" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <com.atminfotech.barcodestorenew.MyTextView
                    android:id="@+id/est"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="KIOSK RECEIPT PRINTER"
                    android:textColor="@color/colorSub"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.atminfotech.barcodestorenew.MyTextView

                        android:id="@+id/itemname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Model Name :  KR203"
                        android:textColor="@color/colorTex"
                        android:textSize="17dp" />

                    <com.atminfotech.barcodestorenew.MyTextView
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_weight="5"
                        android:text="Price On Demand!"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17dp" />

                    <com.atminfotech.barcodestorenew.MyTextView
                        android:id="@+id/abc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0.5"
                        android:text="Team And conditions Apply (minimum Order Qty-10)"
                        android:textColor="@color/colorTex"
                        android:textSize="10dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="11dp"
                    android:background="@color/colordevider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.atminfotech.barcodestorenew.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:text="DSCRIPTION"
                        android:textColor="@color/colorTex"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="16dp"
                            android:src="@mipmap/plus" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:src="@mipmap/minus" />

                    </LinearLayout>

                </LinearLayout>

                <com.atminfotech.barcodestorenew.MyTextView
                    android:id="@+id/discription1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="4.5dp"
                    android:text="Ideal for a number of self-service applications, the affordable KR200 Series kiosk printers fit anywhere and require less maintenance than other more expensive kiosk printers."
                    android:textColor="@color/colorPrimary"
                    android:textSize="12.5dp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.atminfotech.barcodestorenew.MyTextView
            android:id="@+id/go_to_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="16dp"
            android:text="GO TO CART"
            android:textColor="#fff"
            android:textSize="16sp" />

        <com.atminfotech.barcodestorenew.MyTextView
            android:id="@+id/buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="16dp"
            android:text="ADD TO CART"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>


</RelativeLayout>





